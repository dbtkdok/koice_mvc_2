<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koice.mvc.dao.LoginServiceDAO">

    <select id="selLoginUser" resultType="HashMap" parameterType="HashMap">
    	/* SQL_ID : selLoginUser  */
		SELECT 
			  ID
			, USER_ID 
			, USERNAME
			, USER_PW 
			, ROLE 
			, ROLE_ID 
		FROM
			USERS
		WHERE 1=1
    </select>
</mapper>